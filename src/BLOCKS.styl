/*  Base Styles
======================================================= */
    
.sm-pack{
	position:relative;
	width:100%;
    -moz-box-sizing: border-box;
    -o-box-sizing: border-box;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
}
.sm-pack:after{
	clear:both;
	display:table;
	content:" ";
}
.sm-block
.sm-static-block{
    -moz-box-sizing: border-box;
    -o-box-sizing: border-box;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;	
}
.sm-pack.centered{
	display:table-cell;
	vertical-align:middle;
}
.sm-block.spacer,
.sm-static-block.spacer{
	padding:0 15px;
}

/* ------------------------------------
used primarily to fill an entire page,
typically for a dashboard and/or single
page web application
--------------------------------------- */
.sm-viewport{
	height:100%;
	position:absolute;
	width:100%;
}

.full-height{
	height:100%;
}
.align-mid{
	vertical-align:middle;
}

